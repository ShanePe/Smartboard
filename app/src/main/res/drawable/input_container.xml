<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:bottom="2dp"
            android:left="1dp"
            android:right="1dp">
            <solid android:color="@color/cardview_light_background" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="@android:color/background_dark"
                android:endColor="?attr/colorButtonNormal"
                android:startColor="?attr/colorButtonNormal"
                android:type="linear" />
            <corners android:radius="4dp" />
            <stroke
                android:width="2dp"
                android:color="@android:color/background_dark" />
        </shape>
    </item>

</layer-list>