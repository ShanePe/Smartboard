<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:foreground="?attr/selectableItemBackground">
            <solid android:color="@color/colorAccent" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#5A5A5A" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <!--<solid android:color="?attr/colorBackgroundFloating" />-->
            <gradient android:angle="90" android:centerColor="?android:attr/colorBackground"
                android:centerX="1%"
                android:endColor="?android:attr/textColorHintInverse"
                android:startColor="?android:attr/textColorHintInverse"
                android:useLevel="false" />
            <corners android:radius="4dp" />
            <stroke android:width="10dp" android:color="?attr/colorButtonNormal" />
        </shape>
    </item>
</selector>