<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@android:color/background_light" android:centerY="0.2" android:endColor="@android:color/background_light" android:startColor="@android:color/darker_gray" />
            <stroke android:width="2dp" android:color="@color/colorAccent" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@android:color/darker_gray" android:centerY="0.2" android:endColor="@android:color/darker_gray" android:startColor="@color/cardview_dark_background" />
            <stroke android:width="1dp" android:color="@color/cardview_dark_background" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@android:color/background_light" android:centerY="0.2" android:endColor="@android:color/background_light" android:startColor="@android:color/darker_gray" />
            <stroke android:width="1dp" android:color="@color/cardview_dark_background" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>