<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <shane.pennihome.local.smartboard.ui.GroupTitle
            android:id="@+id/prop_group_device_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/prop_sp_thing_icon"
            app:title="@string/lbl_device" />

        <Spinner
            android:id="@+id/prop_sp_thing_icon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:focusable="auto"
            android:foreground="?attr/selectableItemBackground"
            tools:ignore="DuplicateSpeakableTextCheck" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:clickable="false"
            android:clipChildren="false"
            android:measureWithLargestChild="true"
            android:orientation="horizontal">

            <shane.pennihome.local.smartboard.ui.LabelTextbox
                android:id="@+id/prop_txt_blk_name_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                app:label="@string/lbl_name">

            </shane.pennihome.local.smartboard.ui.LabelTextbox>

            <Switch
                android:id="@+id/prop_sw_title_icon"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:width="80dp"
                android:text="@string/hide_title"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <shane.pennihome.local.smartboard.ui.GroupTitle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    app:title="@string/lbl_size" />

                <shane.pennihome.local.smartboard.ui.SizeSelector
                    android:id="@+id/prop_size_selector_icon"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="50" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">

                <shane.pennihome.local.smartboard.ui.GroupTitle
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    app:title="@string/lbl_icon" />

                <shane.pennihome.local.smartboard.ui.IconSelector
                    android:id="@+id/prop_icon_icon"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="50" />
            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>
</merge>