<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="5">

        <ImageView
            android:id="@+id/cbv_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowSpan="3"
            android:layout_rowWeight="1"
            android:contentDescription="@string/content_desc_img"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/cbv_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:background="@drawable/btn_round"
            android:contentDescription="@string/content_desc_img"
            android:padding="16dp"
            app:srcCompat="@drawable/icon_colour_picker" />

        <ImageButton
            android:id="@+id/cbv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:background="@drawable/btn_round"
            android:contentDescription="@string/content_desc_img"
            android:padding="16dp"
            app:srcCompat="@drawable/icon_gallery_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_row="3"
            android:text="@string/lbl_background_opacity" />

        <SeekBar
            android:id="@+id/cbv_colour_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_row="4"
            android:text="@string/lbl_image_opacity" />

        <SeekBar
            android:id="@+id/cbv_image_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_row="4" />
    </GridLayout>

