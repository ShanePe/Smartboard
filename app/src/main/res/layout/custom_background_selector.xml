<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/cbv_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <shane.pennihome.local.smartboard.ui.ViewSwiper
            android:id="@+id/cbv_switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridLayout
                android:id="@+id/cbv_tab_clr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2">

                <Button
                    android:id="@+id/cbv_btn_bg"
                    style="@style/blockItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:background="@android:color/transparent"
                    android:singleLine="false"
                    android:text="@string/lbl_tab_to_select_colour" />


                <SeekBar
                    android:id="@+id/cbv_sb_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:max="100"
                    android:progress="1" />
            </GridLayout>

            <GridLayout
                android:id="@+id/cbv_tab_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2">

                <Button
                    android:id="@+id/cbv_btn_img"
                    style="@style/blockItemStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:background="@android:color/transparent"
                    android:singleLine="false"
                    android:text="@string/lbl_tab_to_select_image" />

                <SeekBar
                    android:id="@+id/cbv_sb_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:max="100"
                    android:progress="1" />
            </GridLayout>
        </shane.pennihome.local.smartboard.ui.ViewSwiper>
    </android.support.v7.widget.LinearLayoutCompat>
</merge>