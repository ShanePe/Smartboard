<?xml version="1.0" encoding="utf-8"?>
<merge>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background_round">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:columnCount="2"
            android:padding="4dp"
            android:rowCount="2">

            <ImageView
                android:id="@+id/css_1x1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/css_1x1"
                android:contentDescription="@string/image" />

            <ImageView
                android:id="@+id/css_2x1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@drawable/css_2x1"
                android:contentDescription="@string/image" />

            <ImageView
                android:id="@+id/css_1x2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/css_1x2"
                android:contentDescription="@string/image" />

            <ImageView
                android:id="@+id/css_2x2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@drawable/css_2x2"
                android:contentDescription="@string/image" />

        </GridLayout>

        <TextView
            android:id="@+id/css_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/white_background_round"
            android:padding="4dp"
            android:textColor="@color/cardview_dark_background" />

    </FrameLayout>
</merge>