<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_round"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/prop_sw_bg_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <shane.pennihome.local.smartboard.ui.ViewSwiper
            android:id="@+id/prop_sw_bg_swiper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/prop_sw_bg_tab_bgclr_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <shane.pennihome.local.smartboard.ui.BackgroundSelector
                    android:id="@+id/prop_sw_bg_clr_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/prop_bg_sw_tab_fgclr_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <shane.pennihome.local.smartboard.ui.ForegroundSelector
                    android:id="@+id/prop_sw_fg_clr_off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/prop_bg_sw_tab_bgclr_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <shane.pennihome.local.smartboard.ui.BackgroundSelector
                    android:id="@+id/prop_sw_bg_clr_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/prop_bg_sw_tab_fgclr_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <shane.pennihome.local.smartboard.ui.ForegroundSelector
                    android:id="@+id/prop_sw_fg_clr_on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.LinearLayoutCompat>

        </shane.pennihome.local.smartboard.ui.ViewSwiper>
    </android.support.v7.widget.LinearLayoutCompat>
</merge>
