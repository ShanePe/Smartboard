<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/expanded_block_area"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/prop_bg_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="?attr/colorButtonNormal"
            app:tabTextColor="?attr/colorButtonNormal" />

        <shane.pennihome.local.smartboard.ui.ViewSwiper
            android:id="@+id/prop_bg_swiper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/prop_bg_tab_bgclr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <shane.pennihome.local.smartboard.ui.BackgroundSelector
                    android:id="@+id/prop_bg_clr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/prop_bg_tab_fgclr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <shane.pennihome.local.smartboard.ui.ForegroundSelector
                    android:id="@+id/prop_fg_clr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.LinearLayoutCompat>
        </shane.pennihome.local.smartboard.ui.ViewSwiper>
    </android.support.v7.widget.LinearLayoutCompat>
</merge>
