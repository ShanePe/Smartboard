<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal|center|fill"
    android:alignmentMode="alignBounds"
    android:animateLayoutChanges="true"
    android:background="@android:drawable/dialog_holo_dark_frame"
    android:columnCount="4"
    android:layoutMode="clipBounds"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/lbl_state"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/txt_row_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_columnWeight="2"
        android:layout_gravity="fill_vertical|fill_horizontal|center"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:textAppearance="?attr/textAppearanceListItem" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_add_prop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical|end"
        android:clickable="true"
        android:focusable="true"
        android:requiresFadingEdge="horizontal|vertical"
        app:backgroundTint="?attr/colorButtonNormal"
        app:srcCompat="@android:drawable/ic_menu_manage" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_add_block"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical|end"
        android:clickable="true"
        android:focusable="true"
        android:requiresFadingEdge="horizontal|vertical"
        app:backgroundTint="?attr/colorButtonNormal"
        app:srcCompat="@drawable/icon_add" />
</GridLayout>