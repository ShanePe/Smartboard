<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_list_block"
    style="@style/listItemStyle"
    android:layout_width="match_parent"
    android:background="@drawable/btn_round"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    tools:ignore="UselessParent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_desc_img"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/icon_dashboard_mm_fg" />

    <TextView
        android:id="@+id/dash_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|fill_horizontal|clip_horizontal|start"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:gravity="start|fill"
        android:textAppearance="?attr/textAppearanceListItem" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btn_delete_dash"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical|end"
        android:layout_margin="5dp"
        android:background="@drawable/btn_round_dark"
        android:clickable="true"
        android:focusable="true"
        android:requiresFadingEdge="horizontal|vertical"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/icon_delete_mm_fg" />
</android.support.v7.widget.LinearLayoutCompat>
