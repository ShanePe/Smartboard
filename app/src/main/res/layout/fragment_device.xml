<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/listItemStyle"
    android:layout_width="match_parent"
    android:columnCount="5">

    <ImageView
        android:id="@+id/device_img"
        style="@style/listItemIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/img_cnt_device"
        app:srcCompat="@drawable/icon_switch" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical|fill_horizontal|clip_horizontal|start"
        android:gravity="start|fill"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/device_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical|fill_horizontal|clip_horizontal|start"
        android:gravity="start|fill"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/device_source"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical|fill_horizontal|clip_horizontal|start"
        android:gravity="start|fill"
        android:textAppearance="?attr/textAppearanceListItem" />

    <Switch
        android:id="@+id/device_switch"
        android:layout_gravity="center_vertical|fill_horizontal|clip_horizontal|start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</GridLayout>
