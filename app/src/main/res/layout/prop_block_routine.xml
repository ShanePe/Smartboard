<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/rt_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>

    <shane.pennihome.local.smartboard.ui.ViewSwiper
        android:id="@+id/rt_swiper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/rt_tab_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <shane.pennihome.local.smartboard.ui.ThingProperties
                        android:id="@+id/rt_properties"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <shane.pennihome.local.smartboard.ui.GroupTitle
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:title="@string/lbl_icon" />

                    <shane.pennihome.local.smartboard.ui.IconSelector
                        android:id="@+id/rt_icon_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.v7.widget.LinearLayoutCompat>
            </ScrollView>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/rt_tab_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <shane.pennihome.local.smartboard.ui.ThingPropertiesClrSelector
                android:id="@+id/rt_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/rt_tab_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <shane.pennihome.local.smartboard.ui.TemplateProperties
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rt_template"/>

        </android.support.v7.widget.LinearLayoutCompat>
    </shane.pennihome.local.smartboard.ui.ViewSwiper>
</android.support.v7.widget.LinearLayoutCompat>