<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/listItemStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/img_spin_icon_srv"
            style="@style/listItemIcon"
            android:contentDescription="@string/content_desc_img"
            app:srcCompat="@mipmap/icon_routine_mm_fg" />

        <TextView
            android:id="@+id/txt_spin_name_srv"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textAlignment="textStart"
            android:text="@string/a_label"
            android:layout_gravity="center_vertical|fill_horizontal|clip_horizontal|start"
            android:gravity="start|fill"
            android:textAppearance="?attr/textAppearanceListItem" />


</LinearLayout>

