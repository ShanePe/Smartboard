<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal|center|fill"
    android:alignmentMode="alignBounds"
    android:animateLayoutChanges="true"
    android:columnCount="5"
    android:layoutMode="clipBounds"
    android:orientation="horizontal"
    tools:orientation="horizontal">

    <ImageView
        android:id="@+id/img_spin_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:contentDescription="@string/content_desc_img"
        android:padding="4dp"
        app:srcCompat="@drawable/icon_routine" />

    <TextView
        android:id="@+id/txt_spin_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:padding="4dp" />

    <TextView
        android:id="@+id/txt_spin_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:padding="4dp" />

    <TextView
        android:id="@+id/txt_spin_source"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_columnWeight="1"
        android:padding="4dp"
        android:textAlignment="textEnd" />


</GridLayout>